<script type="text/javascript">
$('input').keyup(function() {
  str = $(this).val();
  str = str.replace(/\s/g,'');
  $(this).val(str);
});

$(document).ready(function() {
  $("#confirmPassword").keyup(validate);
});

var goodPassword = document.getElementById('password-check-good');
var badPassword = document.getElementById('password-check-bad');
var passwordsMatch = false
function validate() {
  var password1 = $("#inputPassword").val();
  var password2 = $("#confirmPassword").val();

    if(password1 == password2) {
      passwordsMatch = true;
      goodPassword.style.display = 'block'
      badPassword.style.display = 'none'
       $("#password-check-good").val("valid");
    }
    else {
      passwordsMatch = false;
      goodPassword.style.display = 'none'
      badPassword.style.display = 'block'
        $("#validate-status").text("invalid");
    }
}

$('#signInForm').submit(function (evt) {
  if (passwordsMatch) {}
  else {
    evt.preventDefault();
  }
});

</script>

