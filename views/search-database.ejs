<div
  id="searchDatabaseModal"
  class="modal fade"
  tabindex="-1"
  role="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content bg-dark text-white">
      <div class="modal-body">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <span>
            <h5></h5>
          </span>
          <h4 class="m-0">Department Search</h4>
          <button
            type="button"
            class="btn btn-primary btn-md"
            data-dismiss="modal"
            aria-hidden="true"
          >
            X
          </button>
        </div>
        <hr style="width: 88%; max-width: 100rem; border-color: #444" />

        <!-- Search Type Toggle -->
        <div class="d-flex justify-content-around mb-4">
          <button
            id="searchTypeCivilian"
            class="btn search-type-btn btn-outline-primary active"
            data-type="Civilian"
          >
            Civilian
          </button>
          <button
            id="searchTypeVehicle"
            class="btn search-type-btn btn-outline-primary"
            data-type="Vehicle"
          >
            Vehicle
          </button>
          <button
            id="searchTypeFirearm"
            class="btn search-type-btn btn-outline-primary"
            data-type="Firearm"
          >
            Firearm
          </button>
        </div>

        <!-- Search Input -->
        <div class="form-group mb-4">
          <div class="input-group">
            <div class="input-group-prepend">
              <span
                class="input-group-text bg-gray-800 border-0"
                style="background-color: #3b82f6"
              >
                <i class="fa fa-search text-white"></i>
              </span>
            </div>
            <input
              id="searchQuery"
              type="text"
              class="form-control bg-gray-800 text-white border-0"
              placeholder="Search Civilians..."
              autocomplete="off"
            />
          </div>
        </div>

        <!-- Suggestions -->
        <div
          id="searchSuggestions"
          class="bg-gray-800 rounded p-3 mb-4"
          style="display: none; max-height: 200px; overflow-y: auto"
        ></div>

        <!-- Search Button -->
        <button id="searchButton" class="btn btn-primary btn-block mb-4">
          Search
        </button>

        <!-- Recent Searches -->
        <div id="recentSearchesContainer" class="mb-4" style="display: none">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="text-white">Recent Searches</h5>
            <a
              href="javascript:void(0)"
              id="clearRecentSearches"
              class="text-danger"
              >Clear</a
            >
          </div>
          <div id="recentSearches" class="d-flex flex-wrap"></div>
        </div>

        <!-- Results -->
        <div id="searchResultsContainer">
          <h5 class="text-white mb-2">Results</h5>
          <div id="searchResults" class="bg-gray-800 rounded p-3"></div>
          <nav aria-label="Search Results Pagination">
            <ul
              id="searchResultsPagination"
              class="pagination justify-content-center mt-3"
            ></ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .search-type-btn {
    width: 30%;
    border-radius: 0.5rem;
  }
  .search-type-btn.active {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
  }
  .search-item {
    padding: 0.75rem;
    border-bottom: 1px solid #444;
    cursor: pointer;
  }
  .search-item:hover {
    background-color: #3b82f6;
  }
  .recent-search {
    background-color: #444;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .badge-stolen {
    background-color: #dc3545;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
  }
  .text-gray {
    color: #adb5bd;
  }
</style>
