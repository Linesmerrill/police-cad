<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LPC - Communities</title>
    <link
      rel="shortcut icon"
      type="image/ico"
      href="/static/images/favicon.ico"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
        color: #e2e8f0;
      }
      .carousel-item {
        transition: transform 0.5s ease-in-out;
      }
      .card {
        transition: transform 0.3s, box-shadow 0.3s;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
      }
      .scroll-container {
        scroll-behavior: smooth;
        scrollbar-width: none;
        -ms-overflow-style: none;
      }
      .scroll-container::-webkit-scrollbar {
        display: none;
      }
    </style>
  </head>
  <body>
    <div id="root"></div>
    <script
      src="https://unpkg.com/react@18/umd/react.production.min.js"
      defer
    ></script>
    <script
      src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"
      defer
    ></script>
    <script
      src="https://unpkg.com/@babel/standalone/babel.min.js"
      defer
    ></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js" defer></script>
    <script>
      var dbUser = <%- JSON.stringify(user || {}) %>;
    </script>
    <script
      data-cfasync="false"
      type="text/babel"
      src="/static/js/communities.js"
      defer
    ></script>
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.esm.js"
      defer
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.js"
      defer
    ></script>
    <script>
      window.onerror = function (message, source, lineno, colno, error) {
        console.error("Global error:", {
          message,
          source,
          lineno,
          colno,
          error,
        });
      };
    </script>
  </body>
</html>
