                        data-target="#boloDetailModal" onclick="populateBoloDetails('<%=bolos[i]._id%>')">
                        <td id="<%=bolos[i]._id%>-type" style="text-transform: capitalize;">
                          <%=bolos[i].bolo.boloType%>
                        </td>
                        <td id="<%=bolos[i]._id%>-location">
                          <%=bolos[i].bolo.location%>
                        </td>
                        <td id="<%=bolos[i]._id%>-description">
                          <%=bolos[i].bolo.description%>
                        </td>
                      </tr>
                      <%}%>
                        <%}%>
                </tbody>
              </table>
              <% } %>
          </div>
          <div class="col-md-12 col-md-offset-0.75 margin-top-2">
            <% if (commUsers !=null && user.user.activeCommunity !='' && user.user.activeCommunity !=null) {%>
              <hr style="width: 88%;max-width: 100rem;">
              <!-- Active Calls -->
              <span id="active-bolos" class="margin-right-1" style="font-size: 18px;">Active Calls:</span> <button
                type="button" data-toggle="modal" href="#callModal"
                class="btn btn-primary btn-md pull-right margin-bottom-1"
                onclick="fillOfficerList();fillClassifierList();fillFireEmsList();clearCallForm()">Create Call</button>
