                    <th>Created At</th>
                    <th>Description</th>
                    <th>Units Assigned</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (calls !=null && calls != undefined) {%>
                    <% for(var i=0; i<calls.length; i++) {%>
                      <% if (calls[i].call.status) {%>
                        <tr id="<%=calls[i]._id%>-row" class="gray-hover" data-toggle="modal" data-id="<%=i%>"
                          data-target="#callDetailModal"
                          onclick="populateCallDetails('<%=calls[i]._id%>');populateOfficerList('<%=calls[i].call.assignedOfficers%>');populateFireEmsList('<%=calls[i].call.assignedFireEms%>');populateClassifierList('<%=calls[i].call.classifier%>')">
                          <td id="<%=calls[i]._id%>-createdAt">
                            <%=calls[i].call.createdAtReadable%>
                          </td>
                          <td id="<%=calls[i]._id%>-description" style="text-transform: capitalize;">
                            <%=calls[i].call.shortDescription%>
                          </td>
                          <td id="<%=calls[i]._id%>-units-assigned">
                          <% if ((calls[i].call.assignedOfficers !=null && calls[i].call.assignedOfficers != undefined) || (calls[i].call.assignedFireEms != null && calls[i].call.assignedFireEms != undefined)) { %>
                            <% if (calls[i].call.assignedOfficers !=null && calls[i].call.assignedOfficers != undefined) { %>
                              <% for(var j=0; j<calls[i].call.assignedOfficers.length; j++) { %>
                                <% if(commUsers != undefined && commUsers != null) {%>
                                  <% for(var k=0; k<commUsers.length; k++) { %>
                                    <% if (commUsers[k]._id==calls[i].call.assignedOfficers[j]) { %>
                                      <span class="badge badge-secondary">
                                        <%=commUsers[k].user.username%>
                                        <% if (commUsers[k].user.callSign==undefined) { %>
                                        () (Police)
                                        </span>
                                      <% } else { %>
                                        (<%=commUsers[k].user.callSign%>) (Police)</span>
                                      <%}%>
                                    <%}%>
                                  <%}%>
                                <%}%>
                              <%}%>
                            <% } %>
                            <% if (calls[i].call.assignedFireEms != null && calls[i].call.assignedFireEms != undefined) { %>
                              <% for(let j=0; j<calls[i].call.assignedFireEms.length; j++) { %>
                                <% if(dbEmsEngines != undefined && dbEmsEngines != null) {%>
                                  <% for(let k=0; k<dbEmsEngines.length; k++) { %>
                                    <% if (dbEmsEngines[k]._id==calls[i].call.assignedFireEms[j]) { %>
                                      <span class="badge badge-secondary">
                                        Engine #<%=dbEmsEngines[k].emsVehicle.engineNumber%> | (<%=dbEmsEngines[k].emsVehicle.model%>)
                                      </span>
                                    <% } %>
                                  <% } %>
                                <% } %>
                              <% } %>
                            <% } %>
                          <%} else {%>
                            <span class="badge badge-secondary">N/A</span>
                          <%}%>
                          </td>
                        </tr>

                      <%}%>
                    <%}%>
                  <%}%>
                </tbody>
              </table>

            <%}%>
